<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/component_balance"
        android:name="com.mctech.pokergrinder.bankroll.balance.BankrollBalanceFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_bankroll_balance" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/component_investment"
        android:name="com.mctech.pokergrinder.summary.investment.SummaryInvestmentFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/component_balance"
        tools:layout="@layout/fragment_summary_investment" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/grind_title"
        android:name="com.mctech.pokergrinder.summary.session.SummarySessionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/component_investment"
        tools:layout="@layout/fragment_summary_session" />

</androidx.constraintlayout.widget.ConstraintLayout>