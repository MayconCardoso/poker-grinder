<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@color/white"
        app:titleTextColor="@color/white"
        tools:title="Sep 12, 2022" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/container_tab"
        style="@style/Widget.Design.TabLayout.Fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:contentDescription="@string/tournament"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:tabIndicatorHeight="2dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/container_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_tab"
        tools:layout="@layout/fragment_grind_details" />

</androidx.constraintlayout.widget.ConstraintLayout>